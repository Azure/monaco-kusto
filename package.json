    "description": "CSL, KQL plugin for the Monaco Editor",
    "author": {
        "name": "Microsoft"
    },
    "license": "MIT",
    "keywords": [
        "Azure Data Explorer",
        "ADE",
        "kusto"
    ],
    "homepage": "https://github.com/Azure/monaco-kusto",
    "repository": {
        "type": "git",
        "url": "https://github.com/Azure/monaco-kusto"
    },
    "scripts": {
        "compile": "gulp compile",
        "watch": "gulp watch",
        "prepublish": "gulp release",
        "test": "jest"
    },
    "main": "./release/min/monaco.contribution.js",
    "types": "./release/min/monaco.contribution.d.ts",
    "devDependencies": {
        "@types/jest": "^21.1.8",
        "@types/lodash": "^4.14.109",
        "@types/xregexp": "^3.0.29",
        "event-stream": "3.3.4",
        "gulp": "^3.9.1",
        "gulp-requirejs": "0.1.3",
        "gulp-tsb": "^2.0.0",
        "gulp-uglify": "1.5.3",
        "jest": "^22.0.1",
        "lodash": "^4.17.4",
        "merge-stream": "1.0.0",
        "minimatch": "^3.0.4",
        "monaco-editor-core": "0.15.5",
        "monaco-languages": "0.9.0",
        "object-assign": "4.1.0",
        "rimraf": "2.5.2",
        "ts-jest": "^22.0.0",
        "typescript": "3.0.3",
        "vscode-languageserver-protocol-foldingprovider": "^1.0.1",
        "vscode-languageserver-types": "3.6.1",
        "xregexp": "^3.2.0"
    },
    "dependencies": {
        "@kusto/language-service": "0.0.29-rc.1",
        "@kusto/language-service-next": "0.0.33"
    },
    "peerDependencies": {
        "monaco-editor": "^0.15.6"
    },
    "jest": {
        "rootDir": "src",
        "globals": {
            "ts-jest": {
                "tsConfigFile": "src/tsconfig.json"
            }
        },
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "singleQuote": true
    }
}
