{
    "name": "@kusto/monaco-kusto",
    "version": "2.0.11",
    "description": "CSL, KQL plugin for the Monaco Editor",
    "author": {
        "name": "Microsoft"
    },
    "license": "MIT",
    "keywords": [
        "Azure Data Explorer",
        "ADE",
        "kusto"
    ],
    "homepage": "https://github.com/Azure/monaco-kusto",
    "repository": {
        "type": "git",
        "url": "https://github.com/Azure/monaco-kusto"
    },
    "scripts": {
        "compile": "tsc -p ./src/tsconfig.json && tsc -p ./src/tsconfig.esm.json",
        "watch": "tsc -p ./src --watch",
        "release": "mkdirp release  && npm run compile && node ./scripts/release.js && node ./scripts/bundle && npm run copy_types_to_release",
        "copy_types_to_release": "mcopy ./src/monaco.d.ts ./release/monaco.d.ts && mcopy ./node_modules/@kusto/language-service/kusto.javascript.client.min.js  ./release/kusto.javascript.client.min.js && mcopy ./node_modules/@kusto/language-service-next/Kusto.Language.Bridge.min.js ./release/Kusto.Language.Bridge.min.js && mcopy ./node_modules/@kusto/language-service/bridge.min.js ./release/bridge.min.js ./node_modules/@kusto/language-service/newtonsoft.json.min.js ./release/newtonsoft.json.min.js",
        "test": "jest",
        "clean": "rimraf ./out && rimraf ./release"
    },
    "main": "./release/min/monaco.contribution.js",
    "types": "./release/min/monaco.contribution.d.ts",
    "devDependencies": {
        "@types/jest": "^21.1.8",
        "@types/lodash": "^4.14.109",
        "@types/xregexp": "^3.0.29",
        "event-stream": "3.3.4",
        "jest": "^22.0.1",
        "lodash.debounce": "^4.0.8",
        "merge-stream": "1.0.0",
        "minimatch": "^3.0.4",
        "monaco-editor-core": "0.15.5",
        "monaco-languages": "0.9.0",
        "monaco-plugin-helpers": "^1.0.2",
        "object-assign": "4.1.0",
        "rimraf": "2.5.2",
        "terser": "^4.6.7",
        "ts-jest": "^22.0.0",
        "typescript": "3.0.3",
        "vscode-languageserver-protocol-foldingprovider": "^1.0.1",
        "vscode-languageserver-types": "3.6.1",
        "xregexp": "^3.2.0"
    },
    "dependencies": {
        "@kusto/language-service": "0.0.30",
        "@kusto/language-service-next": "0.0.34"
    },
    "peerDependencies": {
        "monaco-editor": "^0.15.6"
    },
    "jest": {
        "rootDir": "src",
        "globals": {
            "ts-jest": {
                "tsConfigFile": "src/tsconfig.json"
            }
        },
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "singleQuote": true
    }
}
