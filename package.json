{
  "name": "@kusto/monaco-kusto",
  "version": "2.0.0-alpha1",
  "description": "Azure Data Explorer KQL plugin for the Monaco Editor",
  "scripts": {
    "copy": "mcopy ./node_modules/@kusto/language-service-next/Kusto.Language.Bridge.min.js ./release/min/Kusto.Language.Bridge.min.js && mcopy ./node_modules/@kusto/language-service/kusto.javascript.client.min.js ./release/min/kusto.javascript.client.min.js && mcopy ./node_modules/@kusto/language-service/bridge.min.js ./release/min/bridge.min.js && mcopy ./node_modules/@kusto/language-service/newtonsoft.json.min.js ./release/min/newtonsoft.json.min.js",
    "compile": "mrmdir ./out && tsc -p ./src/tsconfig.json && tsc -p ./src/tsconfig.esm.json",
    "watch": "tsc -p ./src --watch",
    "prepublishOnly": "mrmdir ./release && npm run compile && node ./scripts/release.js && node ./scripts/bundle && node ./scripts/rewrite && mcopy ./src/monaco.d.ts ./release/monaco.d.ts && npm run copy"
  },
  "author": "Microsoft Corporation",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Azure/monaco-kusto"
  },
  "bugs": {
    "url": "https://github.com/Microsoft/monaco-kusto/issues"
  },
  "keywords": [
    "Azure Data Explorer",
    "ADE",
    "kusto"
  ],
  "homepage": "https://github.com/Azure/monaco-kusto",
  "main": "./release/min/monaco.contribution.js",
  "types": "./release/min/monaco-kusto.d.ts",
  "devDependencies": {
    "@kusto/language-service": "0.0.23-alpha",
    "@kusto/language-service-next": "0.0.28-rc.1",
    "@types/lodash": "^4.14.109",
    "@types/xregexp": "^3.0.29",
    "lodash": "^4.17.11",
    "monaco-editor-core": "0.16.0",
    "monaco-plugin-helpers": "^1.0.2",
    "requirejs": "^2.3.6",
    "typescript": "3.3.3333",
    "uglify-js": "3.4.9",
    "vscode-languageserver-types": "3.14.0",
    "vscode-nls": "^4.1.1",
    "xregexp": "^3.2.0"
  },
  "peerDependencies": {
    "monaco-editor": "^0.16.2"
  }
}
