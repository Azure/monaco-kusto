{
    "name": "@kusto/monaco-kusto",
    "version": "5.7.0",
    "description": "CSL, KQL plugin for the Monaco Editor",
    "author": {
        "name": "Microsoft"
    },
    "license": "MIT",
    "keywords": [
        "Azure Data Explorer",
        "ADE",
        "kusto"
    ],
    "homepage": "https://github.com/Azure/monaco-kusto",
    "repository": {
        "type": "git",
        "url": "https://github.com/Azure/monaco-kusto"
    },
    "scripts": {
        "build": "ts-node ./scripts/build.ts",
        "watch": "ts-node ./scripts/watch.ts",
        "typecheck": "tsc",
        "test_release": "echo release > test/mode.txt && http-server -c-1 -p 8080 ./ -o index.html",
        "test": "jest",
        "clean": "rimraf ./out ./release"
    },
    "main": "./release/min/monaco.contribution.js",
    "types": "./release/min/monaco.contribution.d.ts",
    "files": [
        "release"
    ],
    "devDependencies": {
        "@babel/core": "^7.21.0",
        "@babel/preset-env": "^7.20.2",
        "@babel/preset-typescript": "^7.21.0",
        "@kusto/language-service": "0.0.40",
        "@kusto/language-service-next": "0.0.63",
        "@rollup/plugin-babel": "^6.0.3",
        "@rollup/plugin-commonjs": "^24.0.1",
        "@rollup/plugin-node-resolve": "^15.0.1",
        "@rollup/plugin-terser": "^0.4.0",
        "@rollup/plugin-typescript": "^11.0.0",
        "@tsconfig/node16": "^1.0.3",
        "@types/jest": "^21.1.8",
        "@types/lodash-es": "^4.17.6",
        "@types/node": "16",
        "@types/xregexp": "^4.4.0",
        "concurrently": "^7.6.0",
        "http-server": "^0.12.3",
        "jest": "^26.1.0",
        "live-server": "^1.2.1",
        "merge-stream": "1.0.0",
        "minimatch": "^3.0.4",
        "monaco-editor-core": "~0.35.0",
        "monaco-languages": "2.11.1",
        "requirejs": "^2.3.6",
        "rimraf": "^4.1.2",
        "rollup": "^3.17.3",
        "terser": "^5.16.2",
        "ts-jest": "^26.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.0.0",
        "vscode-languageserver-textdocument": "1.0.4"
    },
    "dependencies": {
        "@kusto/language-service": "0.0.40",
        "@kusto/language-service-next": "0.0.63",
        "lodash-es": "^4.17.21",
        "vscode-languageserver-types": "3.16.0",
        "xregexp": "^5.1.1"
    },
    "peerDependencies": {
        "monaco-editor": "~0.35.0"
    },
    "jest": {
        "rootDir": "src",
        "globals": {
            "ts-jest": {
                "tsConfigFile": "./tsconfig.json"
            }
        },
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    }
}
