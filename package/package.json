{
    "name": "@kusto/monaco-kusto",
    "version": "5.6.6",
    "description": "CSL, KQL plugin for the Monaco Editor",
    "author": {
        "name": "Microsoft"
    },
    "license": "MIT",
    "keywords": [
        "Azure Data Explorer",
        "ADE",
        "kusto"
    ],
    "homepage": "https://github.com/Azure/monaco-kusto",
    "repository": {
        "type": "git",
        "url": "https://github.com/Azure/monaco-kusto"
    },
    "scripts": {
        "build": "ts-node ./scripts/build.ts",
        "watch": "echo dev > test/mode.txt && tsc -p ./tsconfig.watch.json && npm run copy_runtime_deps_to_out && concurrently \"live-server ./ \" \"tsc -w -p ./tsconfig.watch.json \"",
        "test_release": "echo release > test/mode.txt && http-server -c-1 -p 8080 ./ -o index.html",
        "test": "jest",
        "clean": "mrmdir ./out && mrmdir ./release"
    },
    "main": "./release/min/monaco.contribution.js",
    "types": "./release/min/monaco.contribution.d.ts",
    "files": [
        "release"
    ],
    "devDependencies": {
        "@tsconfig/node16": "^1.0.3",
        "@types/jest": "^21.1.8",
        "@types/lodash": "^4.14.109",
        "@types/node": "16",
        "@types/xregexp": "^3.0.29",
        "concurrently": "^5.1.0",
        "event-stream": "3.3.4",
        "http-server": "^0.12.3",
        "jest": "^26.1.0",
        "live-server": "^1.2.1",
        "lodash": "^4.17.4",
        "merge-stream": "1.0.0",
        "minimatch": "^3.0.4",
        "monaco-editor-core": "0.35.0",
        "monaco-languages": "2.11.1",
        "monaco-plugin-helpers": "^1.0.3",
        "object-assign": "4.1.0",
        "requirejs": "^2.3.6",
        "terser": "^5.16.2",
        "ts-jest": "^26.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.0.0",
        "vscode-languageserver-textdocument": "1.0.4",
        "vscode-languageserver-types": "3.16.0",
        "xregexp": "^3.2.0"
    },
    "dependencies": {
        "@kusto/language-service": "0.0.40",
        "@kusto/language-service-next": "0.0.63"
    },
    "peerDependencies": {
        "monaco-editor": "0.35.0"
    },
    "jest": {
        "rootDir": "src",
        "globals": {
            "ts-jest": {
                "tsConfigFile": "./tsconfig.json"
            }
        },
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    }
}
