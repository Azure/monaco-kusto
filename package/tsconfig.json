{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["./src/monaco.contribution.ts", "./src/kustoMode.ts"],
    "compilerOptions": {
        "rootDir": "./src",
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "./release/esm",
        "target": "esnext",
        "lib": ["es2020", "dom", "WebWorker.ImportScripts"],
        "alwaysStrict": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "types": ["./monaco"]
    }
}
