{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["./src/**/*"],
    "compilerOptions": {
        "rootDir": "./src",
        "module": "amd",
        "moduleResolution": "node",
        "outDir": "./out/amd",
        "target": "es5",
        "alwaysStrict": true,
        "declaration": true,
        "skipLibCheck": true
    }
}